<view class="container">
    <view class="app-title">合作小程序</view> 
    <view class="create-project">
        <view class="input-section">
            <view>项目名称</view>
            <input type="text" placeholder="请输入项目名称"/>
        </view>
        <view class="input-section">
            <view>项目人数</view>
            <input type="number" placeholder="请输入项目人数"/>
        </view>
        <view class="input-section">
            <view>项目内容</view>
            <input type="text" placeholder="请输入项目内容"/>
        </view>
        <view class="input-section">
            <view>项目要求</view>
            <input type="text" placeholder="请输入项目要求"/>
        </view>
        <view class="input-section">
            <view>预计时间</view>
            <input type="text" placeholder="请输入预计时间"/>
        </view>
        <button class="create-btn" bindtap="showModal">创建项目</button>
    </view>
    <button class="back-btn" bindtap="goBack">返回上一页</button>
</view>