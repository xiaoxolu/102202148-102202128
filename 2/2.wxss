.container {
  padding: 20px;
}

.app-name {
  font-size: 20px;
  text-align: center;
  margin-top: 30px;
}

.identity-prompt {
  font-size: 30px;
  text-align: center;
  margin-bottom: 30px;
}

.identity-option-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.identity-option-box {
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 20px;
  margin-bottom: 20px;
  width: 90%;
  text-align: center;
}

.identity-option {
  font-size: 30px;
}

.back-button {
  margin-top: 20px;
  text-align: center;
}

.back-button text {
  color: #1AAD19;
  font-size: 16px;
}