<view class="container">
    <view class="title">合作小程序</view>
    <view class="login-section">
        <view class="login-title">登录</view>
        <view class="login-description">满足您的合作需求</view>
        <view class="input-label">手机号码</view>
        <input class="input" type="number" placeholder="请输入" />
        <view class="input-label">密码</view>
        <input class="input" type="password" placeholder="请输入" />
        <view class="checkbox-section">
            <checkbox>记住密码</checkbox>
            <text class="forgot-password">忘记密码？</text>
            
        </view>
        <button class="login-btn" bindtap="handleLogin">登录</button>
    </view>
    <view class="register-link" bindtap="handleRegister">点击注册</view>
</view>