.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10px;
}

.app-title {
  text-align: center;
  font-size: 24px;
  margin-top: 30px;
}

.project-list {
  width: 100%;
}

.project-item, .operation-item {
  padding: 10px;
  border-bottom: 1px solid #eee;
}

.bottom-bar {
  display: flex;
  justify-content: space-around;
  width: 100%;
  padding: 10px 0;
  background-color: #f8f8f8;
}

.bottom-icons {
  display: flex;
  justify-content: center;
  padding: 10px;
}

.bottom-icons image {
  margin: 0 10px;
}

.back-btn {
  color: #1AAD19;
  font-size: 16px;
  margin-bottom: 20px;
}